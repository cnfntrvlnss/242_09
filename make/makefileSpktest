
CC=gcc
CCC=g++
CXX=g++

PROGRAM := spktest
CPPSRCS:= ../src/spkmain/spktest.cpp ../src/utilites.cpp ../src/spk_ex.cpp ../src/MusicDetect_dup.cpp
CSRCS:=
BDIR:=build$(PROGRAM)
COBJS:= 
CPPOBJS:= 
CPRES:= 
CPPPRES:=

CONF:=Debug
BDIR:=$(BDIR)/$(CONF)
TDIR:=../test09/ioacas
PROGRAM:=$(TDIR)/$(PROGRAM)

ifeq (Debug,$(CONF))
CPPFLAGS+=-g -Wall
else
CPPFLAGS+=-O2 -Wall
endif

LDLIBS+=-lpthread -L$(TDIR) -lSpeakerRecogAPI -lMusicDetect -ldllSRVADCluster -lTLI_API -Wl,-rpath-link=$(TDIR)

.PHONY: all
all: ${PROGRAM}

define CPRE_template
CPRETMP:=$(BDIR)/$(notdir $(1:.c=.d))
COBJS += $$(CPRETMP:.d=.o)
CPRES += $$(CPRETMP)
$$(CPRETMP): $(1)
	mkdir -p $(BDIR)
	set -e; $$(CC) -MM $$< | \
	sed 's,\($$(notdir $$(@:.d=.o))\)[ ]*:,$(BDIR)/\1 $$@ :,' > $$@
endef
$(foreach csrc, $(CSRCS), $(eval $(call CPRE_template, $(csrc))))

define CPPPRE_template
CPPPRETMP:=$(BDIR)/$(notdir $(1:.cpp=.d))
CPPOBJS += $$(CPPPRETMP:.d=.o)
CPPPRES += $$(CPPPRETMP)
$$(CPPPRETMP): $(1)
	mkdir -p $(BDIR)
	set -e; $$(CC) -MM $$< | \
	sed 's,\($$(notdir $$(@:.d=.o))\)[ ]*:,$(BDIR)/\1 $$@ :,' > $$@
endef
$(foreach cppsrc, $(CPPSRCS), $(eval $(call CPPPRE_template, $(cppsrc))))

include $(CPRES) $(CPPPRES)


${CPPOBJS}: %.o:
	$(COMPILE.cc) $< -o $@

${COBJS}: %.o:
	$(COMPILE.c) $< -o $@


${PROGRAM}: ${CPPOBJS} ${COBJS}
	${CCC} -o $@ $^ ${LDLIBS} 






